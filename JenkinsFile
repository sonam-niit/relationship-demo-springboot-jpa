pipeline {
  agent any


  stages {
    stage('Clone Repository') {
      steps {
        git branch: 'main', url: 'https://github.com/sonam-niit/relationship-demo-springboot-jpa.git'
      }
    }

    stage('Build JAR') {
      steps {
        sh 'mvn clean install -DskipTests'
      }
    }

//     stage('Deploy with Docker Compose') {
//       steps {
//         // Clean up previous containers (optional)
//         sh 'docker-compose down || true'
//         sh 'docker-compose up -d --build'
//       }
//     }

      stage('Deploy with Docker Compose') {
            steps {
              // Clean up previous containers (optional)
              sh 'docker-compose --project-name springbootpipeline down || true'
              sh 'docker-compose --project-name springbootpipeline up -d --build'
            }
          }
  }

  post {
    success {
      echo 'Deployment completed successfully.'
    }
    failure {
      echo 'Deployment failed.'
    }
  }
}
